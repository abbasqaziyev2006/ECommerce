@using ECommerce.BLL.ViewModels
@model List<CategoryViewModel>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Categories</h4>
                <a class="btn btn-primary" asp-controller="category" asp-action="create">
                    Add
                </a>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model ?? [])
                            {
                                <tr>
                                    <td>@category.Name</td>
                                    <td>
                                        <a class="btn btn-primary" asp-controller="category" asp-action="details" asp-route-id="@category.Id">
                                            Details
                                        </a>
                                        <a class="btn btn-warning" asp-controller="category" asp-action="update" asp-route-id="@category.Id">
                                            Update
                                        </a>
                                        <a class="btn btn-danger" onclick="deleteCategory(@category.Id, this)">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function deleteCategory(id, element) {
      fetch(`/Admin/category/delete/${id}`,{
      method : "POST"})
      .then(response=>response.json()).
      then(data => {
              element.closest("tr").remove();
        }).catch(error => {
              console.log('Error:', error);
        });
    }
</script>